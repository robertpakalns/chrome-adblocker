{
    "manifest_version": 3,
    "name": "Tricko Guard",
    "version": "1.0",
    "description": "An extension for blocking scripts on runtime",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/tricko16.png",
            "48": "icons/tricko48.png",
            "128": "icons/tricko128.png"
        }
    },
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}